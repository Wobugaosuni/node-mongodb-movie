extends ../layout
block content
    .container
        .row
            .col-md-7
                iframe(src=movie.flash, width="720px", height="480px", align="middle", frameborder="0" allowfullscreen="true")
            .col-md-5
                dl.dl-horizontal
                    dt 电影名称
                    dd=movie.title
                    dt 导演
                    dd=movie.doctor
                    dt 国家
                    dd=movie.country
                    dt 语言
                    dd=movie.language
                    dt 上映年份
                    dd=movie.year
                    dt 简介
                    dd=movie.summary

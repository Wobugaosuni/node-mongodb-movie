extends ../../layout
block content

	.container(style="padding: 0 0 74px 0")
		.row
			form.form-horizontal(method="POST", action="/admin/movie/new", enctype="multipart/form-data")

				if(movie._id)
					input(type="hidden", name="movie[_id]", value=movie._id)

				//- .form-group
				//- 	label.col-sm-2.control-label(for="inputCategoryName") 电影分类
				//- 	.col-sm-10
				//- 		input#inputCategoryName.form-control(type="text", name="movie[categoryName]", value=movie.categoryName)
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 豆瓣电影subject_id
					.col-sm-10
						input#douban.form-control(type="text", name="movie[douban]", value=movie.douban)

				.form-group
					label.col-sm-2.control-label(for="inputCategory") 分类选择
					.col-sm-10
						each category in movie.categories
							label.radio-inline
								if (movie._id)
									input(type="radio", name="movie[category]", value=category['_id'], checked=category['_id'].toString()===movie.category.toString())
									| #{category.name}
								else
									input(type="radio", name="movie[category]", value=category['_id'])
									| #{category.name}

				.form-group
					label.col-sm-2.control-label(for="inputTitle") 电影名称
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]", value=movie.title)

				.form-group
					label.col-sm-2.control-label(for="inputDoctor") 电影导演
					.col-sm-10
						input#inputDoctor.form-control(type="text", name="movie[doctor]", value=movie.doctor)

				.form-group
					label.col-sm-2.control-label(for="inputCountry") 国家
					.col-sm-10
						input#inputCountry.form-control(type="text", name="movie[country]", value=movie.country)

				.form-group
					label.col-sm-2.control-label(for="inputLan") 语种
					.col-sm-10
						input#inputLan.form-control(type="text", name="movie[language]", value=movie.language)

				.form-group
					label.col-sm-2.control-label(for="inputPoster") 海报地址
					.col-sm-10
						input#inputPoster.form-control(type="text", name="movie[poster]", value=movie.poster)
				.form-group
					label.col-sm-2.control-label(for="uploadPoster") 海报上传
					.col-sm-10
						input#inputPoster.form-control(type="file", name="uploadPoster")

				.form-group
					label.col-sm-2.control-label(for="inputYear") 上映年代
					.col-sm-10
						input#inputYear.form-control(type="text", name="movie[year]", value=movie.year)

				.form-group
					label.col-sm-2.control-label(for="inputUrl") 片源地址
					.col-sm-10
						input#inputUrl.form-control(type="text", name="movie[flash]", value=movie.flash)

				.form-group
					label.col-sm-2.control-label(for="inputSummary") 电影简介
					.col-sm-10
						input#inputSummary.form-control(type="text", name="movie[summary]", value=movie.summary)

				.form-group
					.col-sm-2
					.col-sm-10
						button.btn.btn-default(type="submit") 录入

	script(src="/js/admin.js")
